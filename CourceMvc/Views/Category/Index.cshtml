@model List<Category>

<div class="container">
<div class="row pt-3 pb-3">
    <div class="col-6">
        <h1 >Category List</h1>
    </div>
    <div class="col-6 text-end ">
        <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle-fill"></i>  Add New Category
        </a>
    </div>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th> Id</th>
            <th>Category Name</th>
            <th>Display Order</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.OrderByDescending(u=>u.CategoryId))
        {
           <tr>
               <td>@obj.CategoryId</td>
                <td>@obj.Name</td>
                <td>@obj.DisplayOrder</td>

                <td>
                    <div class="btn-group w-100" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.CategoryId" class="btn btn-primary mx-2 flex-fill">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.CategoryId"  class="btn btn-danger mx-2 flex-fill">
                            <i class="bi bi-trash3-fill"></i> Delete
                        </a>
                        </div>
                </td>

           </tr> 
        }
    </tbody>
 
</table>
</div>